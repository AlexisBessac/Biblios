{% extends 'base.html.twig' %}

{% block title %}Liste des Commentaires{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-center">Liste des commentaires</h1>

        <div class="my-4">
            <a href="{{ path('app_comments_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un nouveau commentaire
            </a>
        </div>

        <table class="table table-striped table-bordered my-4">
            <thead class="table-dark">
                <tr>
                    <th>Contenu</th>
                    <th>Livre Conerné</th>
                    <th>Utilisateur</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.books.title }}</td>
                    <td>{{ comment.user.firstname }} {{ comment.user.lastname }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_comments_show', {'id': comment.id}) }}" class="btn btn-sm btn-info me-2" title="Voir">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_comments_edit', {'id': comment.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun commentaire trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

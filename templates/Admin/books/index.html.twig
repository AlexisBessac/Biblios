{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-center fw-bold">Liste des livres</h1>

        <div class="row mb-5">
            <div class="col-md-3">
                <a href="{{ path('app_admin_genre_index') }}" class="text-decoration-none">
                    <div class="card shadow-lg border-0 text-center h-100 bg-light">
                        <div class="card-body">
                            <i class="fas fa-tags fa-4x text-primary mb-3"></i>
                            <h5 class="card-title fw-bold">Gestion des Genres</h5>
                            <p class="card-text text-muted">Gérez les catégories de livres disponibles.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="{{ path('app_admin_author_index') }}" class="text-decoration-none">
                    <div class="card shadow-lg border-0 text-center h-100 bg-light">
                        <div class="card-body">
                            <i class="fas fa-user-edit fa-4x text-primary mb-3"></i>
                            <h5 class="card-title fw-bold">Gestion des Auteurs</h5>
                            <p class="card-text text-muted">Gérez les auteurs des livres.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="{{ path('app_admin_user_index') }}" class="text-decoration-none">
                    <div class="card shadow-lg border-0 text-center h-100 bg-light">
                        <div class="card-body">
                            <i class="fas fa-users fa-4x text-primary mb-3"></i>
                            <h5 class="card-title fw-bold">Gestion des Utilisateurs</h5>
                            <p class="card-text text-muted">Gérez les utilisateurs de la plateforme.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a href="{{ path('app_comments_index') }}" class="text-decoration-none">
                    <div class="card shadow-lg border-0 text-center h-100 bg-light">
                        <div class="card-body">
                            <i class="fas fa-comments fa-4x text-primary mb-3"></i>
                            <h5 class="card-title fw-bold">Liste des Commentaires</h5>
                            <p class="card-text text-muted">Consultez et gérez les commentaires des utilisateurs.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="{{ path('app_admin_books_new') }}" class="btn btn-success" title="Ajouter un nouveau livre">
                <i class="fas fa-plus"></i> Ajouter un nouveau livre
            </a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger" title="Se déconnecter">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        </div>

        <table class="table table-striped table-bordered my-4">
            <thead class="table-dark text-center">
                <tr>
                    <th>Titre</th>
                    <th>Nombre de pages</th>
                    <th>Publié en</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td class="text-center">{{ book.pageNumber }}</td>
                    <td class="text-center">{{ book.publishedAt ? book.publishedAt|date('Y') : '' }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_admin_books_show', {'id': book.id}) }}" class="btn btn-sm btn-info me-2" title="Voir">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_admin_books_edit', {'id': book.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun livre trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

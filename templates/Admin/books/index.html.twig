{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-center">Liste des livres</h1>

        <div class="my-4">
            <a href="{{ path('app_admin_books_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un nouveau livre
            </a>
        </div>

        <table class="table table-striped table-bordered my-4">
            <thead class="table-dark">
                <tr>
                    <th>Titre</th>
                    <th>Nombre de pages</th>
                    <th>Publié en</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.pageNumber }}</td>
                    <td>{{ book.publishedAt ? book.publishedAt|date('Y') : '' }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_admin_books_show', {'id': book.id}) }}" class="btn btn-sm btn-info me-2" title="Voir">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_admin_books_edit', {'id': book.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr></tr>
                    <td colspan="4" class="text-center">Aucun livre trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

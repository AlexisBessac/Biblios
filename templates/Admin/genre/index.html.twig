{% extends 'base.html.twig' %}

{% block title %}Liste des genres{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4 text-center">Liste des genres</h1>

        <div class="d-flex justify-content-end mb-4">
            <a href="{{ path('app_logout') }}" class="btn btn-danger" title="Se déconnecter">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        </div>

        <div class="my-4 d-flex justify-content-between">
            <a href="{{ path('app_admin_books_index') }}" class="btn btn-secondary" title="Retour à la liste des livres">
                <i class="fas fa-arrow-left"></i> Retour à la liste des livres
            </a>
            <a href="{{ path('app_admin_genre_new') }}" class="btn btn-primary" title="Créer un nouveau genre">
                <i class="fas fa-plus"></i> Créer un nouveau genre
            </a>
        </div>

        <table class="table table-striped table-bordered my-4">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for genre in genres %}
                <tr>
                    <td>{{ genre.name }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_admin_genre_show', {'id': genre.id}) }}" class="btn btn-sm btn-info mx-4" title="Voir">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_admin_genre_edit', {'id': genre.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucun genre trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

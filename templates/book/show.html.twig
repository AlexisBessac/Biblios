{% extends 'base.html.twig' %}

{% set page_title = book is null ? 'Livre inconnu' : book.title %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<main class="main">
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0 w-100 rounded shadow-lg" src="{{ asset('images/cover/' ~ book.cover) }}" alt="Couverture de {{ book.title }}" />
                </div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{ page_title }}</h1>
                    <div class="fs-5 mb-3">
                        <span class="text-muted">Auteur : </span>{{ book.author.name }}
                    </div>
                    <div class="fs-5 mb-3">
                        <span class="text-muted">Publi√© en : </span>{{ book.publishedAt ? book.publishedAt|date('Y') : '' }}
                    </div>
                    <div class="fs-5 mb-3">
                        <span class="text-muted"></span>{{ book.pageNumber }}{{ book.pageNumber is not null ? ' pages ' : '' }}
                    </div>
                    <div class="fs-5 mb-3">
                        <span class="text-muted"></span>{{ book.description }}
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_book_index') }}">
                            <button class="btn btn-outline-primary flex-shrink-0 my-4" type="button" title="Revenir au catalogue">
                                <twig:ux:icon name="typcn:arrow-back" width="24px" height="24px" />
                                Revenir au catalogue
                            </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}